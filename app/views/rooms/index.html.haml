%section
	.container
		.row
			.col-md-12
				%h2 Salas de cine
				
				= link_to new_room_path, :class => "btn btn-success", "data-toggle" => "tooltip", "data-placement" => "top", :title => "Crear nueva sala de cine" do
					Nueva Sala de Cine
				%hr
				%table#table.table
					%thead
						%tr
							%th ID
							%th Nombre
							%th Cantidad de Asientos
							%th Acciones
					%tbody
						- @rooms.each do |room|
							%tr
								%td= room.id
								%td= room.name
								%td 0
								%td
									=link_to(edit_room_path(room.id),  :class =>"btn btn-warning") do
										Configurar


