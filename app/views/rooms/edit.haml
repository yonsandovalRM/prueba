			.col-md-4
				%form{:action => ""}
					.form-group
						%label{:for => "filas"} Cantidad de Filas
						%input{:type => "text", :class=>"form-control", :id=>"filas"}
					.form-group
						%label{:for => "filas"} Cantidad de Columnas
